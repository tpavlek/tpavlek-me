{% if caption is defined %}
    <figure {% if inline is defined %} style="display: inline;" {% endif %}>
        <img src="{{page.imgpath}}{{name}}" />
        <figcaption>{{ caption }}</figcaption>
    </figure>
    {% else %}
        <img src="{{page.imgpath}}{{name}}" {% if inline is defined %} style="display:inline;" {% endif %}/>
{% endif %}
